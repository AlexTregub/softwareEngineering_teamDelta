{
  "name": "ant-game-tests",
  "version": "1.0.0",
  "description": "Test suite for the Ant Game project",
  "main": "sketch.js",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:test": "eslint test/",
    "pretest": "npm run lint:test",
    "test": "node test/run-all-tests.js",
    "test:unit": "npm run lint:test:unit && npx mocha \"test/unit/**/*.test.js\" --reporter spec",
    "test:unit:controllers": "npx mocha \"test/unit/controllers/*.test.js\" --reporter spec",
    "test:unit:managers": "npx mocha \"test/unit/managers/*.test.js\" --reporter spec",
    "test:unit:models": "npx mocha \"test/unit/models/**/*.test.js\" --reporter spec",
    "test:unit:views": "npx mocha \"test/unit/views/**/*.test.js\" --reporter spec",
    "lint:test:unit": "eslint test/unit/",
    "test:integration": "npm run lint:test:integration && npx mocha \"test/integration/**/*.test.js\" --reporter spec --timeout 10000",
    "lint:test:integration": "eslint test/integration/",
    "test:bdd": "node test/bdd/run_resource_mvc_tests.js",
    "dev": "python -m http.server 8000",
    "start": "python -m http.server 8000"
  },
  "keywords": [
    "game",
    "ants",
    "simulation",
    "p5js",
    "testing"
  ],
  "author": "Software Engineering Team Delta",
  "license": "MIT",
  "devDependencies": {
    "@cucumber/cucumber": "^9.5.0",
    "@eslint/js": "^9.39.1",
    "chai": "^4.3.10",
    "chromedriver": "^141.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-chai-friendly": "^1.1.0",
    "eslint-plugin-mocha": "^11.2.0",
    "jsdom": "^22.1.0",
    "mocha": "^10.2.0",
    "puppeteer": "^24.23.0",
    "selenium-webdriver": "^4.36.0",
    "sinon": "^21.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlexTregub/softwareEngineering_teamDelta.git"
  },
  "bugs": {
    "url": "https://github.com/AlexTregub/softwareEngineering_teamDelta/issues"
  },
  "homepage": "https://github.com/AlexTregub/softwareEngineering_teamDelta#readme",
  "directories": {
    "doc": "docs",
    "test": "test"
  }
}
