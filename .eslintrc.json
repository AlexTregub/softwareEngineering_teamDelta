{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "lib/**",
    "node_modules/**",
    "**/*.min.js",
    "assets/**",
    ".git/**",
    "ignore/**"
  ],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "warn"
  },
  "globals": {
    "p5": "readonly",
    "createVector": "readonly",
    "setup": "readonly",
    "draw": "readonly",
    "mouseX": "readonly",
    "mouseY": "readonly",
    "mousePressed": "readonly",
    "mouseIsPressed": "readonly",
    "keyPressed": "readonly",
    "keyCode": "readonly",
    "keyIsDown": "readonly",
    "SHIFT": "readonly",
    "CONTROL": "readonly",
    "width": "readonly",
    "height": "readonly",
    "windowWidth": "readonly",
    "windowHeight": "readonly",
    "frameRate": "readonly",
    "text": "readonly",
    "fill": "readonly",
    "stroke": "readonly",
    "noStroke": "readonly",
    "rect": "readonly",
    "circle": "readonly",
    "ellipse": "readonly",
    "line": "readonly",
    "push": "readonly",
    "pop": "readonly",
    "translate": "readonly",
    "scale": "readonly",
    "rotate": "readonly",
    "background": "readonly",
    "color": "readonly",
    "loadImage": "readonly",
    "image": "readonly",
    "textSize": "readonly",
    "textAlign": "readonly",
    "CENTER": "readonly",
    "LEFT": "readonly",
    "RIGHT": "readonly",
    "CORNER": "readonly",
    "CORNERS": "readonly"
  }
}